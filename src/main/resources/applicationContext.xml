<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="nearestOptimizer" class="com.delivery.service.optimizer.NearestNeighborOptimizer"/>
    <bean id="clarkeOptimizer" class="com.delivery.service.optimizer.ClarkeWrightOptimizer"/>

    <bean id="tourService" class="com.delivery.service.TourServiceImpl">
        <constructor-arg ref="tourRepository"/>
        <constructor-arg ref="nearestOptimizer"/>
        <constructor-arg ref="clarkeOptimizer"/>
    </bean>

</beans>
